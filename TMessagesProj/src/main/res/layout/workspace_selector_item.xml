<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/circles_top_bottom_border_bg"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:padding="9dp"
        android:background="@drawable/circles_workspace_gray_bg"
        android:src="@drawable/circles_personal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/litera"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@drawable/circles_workspace_blue_bg"
        android:gravity="center" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:minWidth="24dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/circles_counter_bg"
        android:textSize="14sp"
        android:textColor="@android:color/white" />

</LinearLayout>